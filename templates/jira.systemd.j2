[Unit]
Description=JIRA Service
After=network.target iptables.service firewalld.service firewalld.service httpd.service

[Service]
Type=forking
User={{ jira_user }}
Environment=JAVA_HOME=/usr/bin
ExecStart={{ jira_home }}/current/bin/start-jira.sh
ExecStop={{ jira_home }}/current/bin/stop-jira.sh
ExecReload={{ jira_home }}/current/bin/stop-jira.sh | sleep 60 | {{ jira_home }}/current/bin/start-jira.sh
LimitNOFILE=4096
LimitNPROC=4096

[Install]
WantedBy=multi-user.target

